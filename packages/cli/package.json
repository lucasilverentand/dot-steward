{
  "name": "@dot-steward/cli",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "Dot Steward command line interface",
  "main": "src/index.ts",
  "engines": { "bun": ">=1.0.0" },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "bin": {
    "dot-steward": "src/cli.ts"
  },
  "files": ["src"],
  "publishConfig": { "access": "public", "registry": "https://npm.pkg.github.com" },
  "sideEffects": false,
  "scripts": {
    "dev": "bun run src/cli.ts",
    "start": "bun run src/cli.ts",
    "release:publish": "bun publish --access public"
  },
  "dependencies": {
    "@dot-steward/core": "^0.1.0",
    "commander": "^12.1.0",
    "@clack/prompts": "^0.11.0",
    "listr2": "^8.2.4",
    "consola": "^3.2.3",
    "picocolors": "^1.0.0",
    "wrap-ansi": "^9.0.0",
    "string-width": "^7.0.0"
  }
}
