{
  "name": "@dot-steward/workspace",
  "private": true,
  "packageManager": "bun@1.1.8",
  "engines": {
    "bun": ">=1.0.0"
  },
  "workspaces": ["packages/*", "apps/*", "plugins/*"],
  "scripts": {
    "lint": "biome check . && bun run scripts/check-static-this.mjs && bun run scripts/check-empty-lines.mjs",
    "lint:static-this": "bun run scripts/check-static-this.mjs",
    "format": "biome format --write .",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.2.21"
  },
  "dependencies": {
    "zod": "^4.1.5"
  }
}
